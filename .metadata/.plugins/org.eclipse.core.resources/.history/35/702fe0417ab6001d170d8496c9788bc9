
public class Ejercicios348 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

//		Ejercicio: escribe un programa que dado tres números imprima por pantalla cuál es el
//		mayor.
		
		int a = 5, b = 10, c = 15;
		
		if (a > b && a > c) {
			System.out.println("El numero a es el mayor");
		} 
		else if (b > a && b > c) {
			System.out.println("El numero b es el mayor");
		} 
		else {
			System.out.println("El numero c es el mayor");
		}
	}

}
